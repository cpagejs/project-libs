{
  "compilerOptions": {
    "outDir": "./build",
    "noImplicitAny": true,
    "allowJs": true,
    "target": "es5",
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2020",
      "scripthost"
    ],
    "downlevelIteration": true,
    "emitBOM": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "test/*"],
  "exclude": ["node_modules"]
}
